{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*",
    "*.config.mjs",
    ".eslintrc.mjs",
    "drizzle.config.ts"
  ],
  "exclude": ["node_modules"]
}
